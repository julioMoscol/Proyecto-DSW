@model Proyecto.Models.Trabajador

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Trabajador</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="nomtrabajador" class="control-label"></label>
                <input asp-for="nomtrabajador" class="form-control" />
                <span asp-validation-for="nomtrabajador" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="apetrabajador" class="control-label"></label>
                <input asp-for="apetrabajador" class="form-control" />
                <span asp-validation-for="apetrabajador" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="dnitrabajador" class="control-label"></label>
                <input asp-for="dnitrabajador" class="form-control" />
                <span asp-validation-for="dnitrabajador" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="teltrabajador" class="control-label"></label>
                <input asp-for="teltrabajador" class="form-control" />
                <span asp-validation-for="teltrabajador" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="correo" class="control-label"></label>
                <input asp-for="correo" class="form-control" />
                <span asp-validation-for="correo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="direccion" class="control-label"></label>
                <input asp-for="direccion" class="form-control" />
                <span asp-validation-for="direccion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="cargo" class="control-label"></label>
                <select asp-for="cargo" asp-items="ViewBag.cargo" class="form-select"></select>
                <span asp-validation-for="cargo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="area" class="control-label"></label>
                <select asp-for="area" asp-items="ViewBag.area" class="form-select"></select>
                <span asp-validation-for="area" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="password" class="control-label"></label>
                <input asp-for="password" class="form-control" />
                <span asp-validation-for="password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <br />
                <a asp-action="Create" class="btn btn-warning">Limpiar</a>
                <input type="submit" value="Guardar " class="btn btn-primary" />
                <a asp-action="list" class="btn btn-danger">Regresar <i class="bi bi-arrow-return-left"></i></a>
            </div>
        </form>
    </div>
</div>

<div>
    @ViewBag.mensaje
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
